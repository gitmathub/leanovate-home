---
layout: mail.njk
theme: dark
---

<style>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: inherit;
  }
  h1 {
    font-size: 42px;
    font-weight: 300;
    margin: 3.2rem auto 2.8rem auto;
  }
  h2 {
    font-size: 32px;
    font-weight: 300;
    margin: 2.8rem auto 2.1rem auto;
  }
  button {
    background-color: #1e73be;
    color: white;
    text-transform: uppercase;
    height: 36px;
    padding: 0 16px;
    border: 0;
    border-radius: 4px;
    margin: 30px;
  }
</style>
<section class="centered" style="text-align: center;">
  <h2>{{ whitePaper }}</h2>
  <h1>{{ whitePaperTitle }}</h1>
  {% partial 'download' %}
  <a href="{{ env.resourcesUrl }}/{{ downloadPath }}/{{ whitePaperFileName }}" style="text-decoration: none">
    <button type="button">
      <span>{{ downLoadButton }}</span>
    </button>
  </a>
</section>